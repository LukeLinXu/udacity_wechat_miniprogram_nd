<scroll-view scroll-x>
  <view class='type-list'>
    <view class="type-item" wx:for="{{typeMap}}" wx:for-index="key" wx:for-item="value" data-id="{{key}}" bindtap='onTapType'>
      {{value}}
    </view>
  </view>
</scroll-view>

<scroll-view scroll-x>
  <view class='news-list'>
    <view class="news-item" wx:for="{{newsList}}" data-id="{{item.id}}" bindtap='onTapNew'>
      <text class='news_item_title'>{{item.title}}</text>
      <text class='news_item_time_and_author'>{{item.date + item.source}}</text>
      <image class='news_item_image' src='{{item.firstImage}}'></image>
    </view>
  </view>
</scroll-view>