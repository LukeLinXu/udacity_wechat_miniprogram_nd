.type-list {
    display:flex;
    padding-top: 20rpx;
    padding-bottom: 20rpx;
}

.type-item {
    display:flex;
    width: 120rpx;
    flex-shrink: 0;
    flex-direction:column;
    align-items:center;
}

.type-item-selected{
  font-size: 45rpx;
}

.type-item-unselected{
  font-size: 35rpx;
}

.news-list {
    margin-top: 20rpx;
    margin-bottom: 20rpx;
    margin-left: 20rpx;
    margin-right: 20rpx;
}

.news-item {
  display:flex;
}

.news-item-text {
  width: 490rpx;
  padding-right: 20rpx
}

.news-item-title {
  font-size: 30rpx;
  line-height: 42rpx;
}

.news-item-time-and-author {
  font-size: 25rpx;
  line-height: 35rpx;
  opacity: 0.5;
}

.news-item-image {
  width: 210rpx;
  height: 140rpx;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
}